@{
    ViewData["Title"] = "Page d'Accueil";
}

<div>
    <label>Contenu du fichier:</label><br/>
    @ViewBag.Message
</div>


<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Télécharger un fichier d'extension XML, TXT ou JSON:</p>
            <input type="file" name="file" accept=".txt, .xml, .json" required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Télécharger" />
        </div>
    </div>
</form>
